<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed State: Darker Gradient -->
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="45"
                android:startColor="#5A8DAA"
                android:endColor="#062A64"
                android:type="linear"/>
            <corners android:radius="40dp"/>
            <solid android:color="#30000000"/> <!-- Slight overlay for pressed effect -->
        </shape>
    </item>

    <!-- Focused State: Slightly Brighter Gradient -->
    <item android:state_focused="true">
        <shape>
            <gradient
                android:angle="45"
                android:startColor="#A0C1E3"
                android:endColor="#1565C0"
                android:type="linear"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- Disabled State: Muted Colors -->
    <item android:state_enabled="false">
        <shape>
            <gradient
                android:angle="45"
                android:startColor="#B0BEC5"
                android:endColor="#78909C"
                android:type="linear"/>
            <corners android:radius="40dp"/>
        </shape>
    </item>

    <!-- Default State: Original Gradient -->
    <item>
        <shape>
            <gradient
                android:angle="45"
                android:startColor="#87AECA"
                android:endColor="#0D47A1"
                android:type="linear"/>
            <corners android:radius="40dp"/>
        </shape>
    </item>

</selector>
